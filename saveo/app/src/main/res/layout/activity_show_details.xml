<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_item_details_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"

                    android:gravity="center_vertical|center_horizontal"
                    android:text="Movies"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_cloud_upload_24"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:id="@+id/ivMovieLogo"
                android:layout_centerVertical="true"
                android:layout_width="150dp"
                android:scaleType="fitXY"
                android:layout_height="250dp"
                android:layout_marginStart="30dp"
                />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvMovieName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@+id/ivMovieLogo"
                android:text="MovieName" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvDate"
                android:layout_marginStart="20dp"
                android:textSize="16sp"

                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMovieName"
                android:layout_toRightOf="@+id/ivMovieLogo"
                android:text="22/10"
                />
            <LinearLayout
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/llButtons"
                android:layout_below="@+id/tvDate"
                android:layout_toRightOf="@id/ivMovieLogo">
                <TextView
                    android:padding="1dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:id="@+id/generesFirst"
                    android:background="@drawable/button_backgound_view"
                    />
                <TextView
                    android:padding="1dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="11sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/generesSecond"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_backgound_view"
                    />
                <TextView
                    android:padding="1dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:textSize="11sp"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:id="@+id/generesThird"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_backgound_view"
                    />
            </LinearLayout>

            <TextView
                android:textColor="@color/white"
                android:textSize="14sp"
                android:id="@+id/tvRatingApi"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llButtons"
                android:layout_toRightOf="@id/ivMovieLogo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/tvReviews"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivMovieLogo"
                android:layout_below="@+id/tvRatingApi"
                android:layout_marginStart="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"

                android:id="@+id/tvSynopsis"
                android:text="Synopsis"
                android:textColor="@color/black"
                />
            <ScrollView
                android:layout_below="@+id/tvSynopsis"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="10dp"

                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDescricption"
                        />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>